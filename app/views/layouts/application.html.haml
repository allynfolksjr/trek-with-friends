!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Trek With Friends"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            %a{href: "#{root_path}"} Trek With Friends
        %li.toggle-topbar.menu-icon
          %a{href: "#"}
            %span Menu
      %section.top-bar-section
        / Right Nav Section
        %ul.right
          %li
            %a{href: "#"} My Account
          %li.has-dropdown
            %a{href: "#"} Explore
            %ul.dropdown
              %li
                %a{:href => "/"} Series
              %li
                %a{href: "#"} Episodes
              %li
                %a{:href => "#"} Groups
    .section.main-content
      .row
        = yield

  %footer
    .row
      .column.arge-12
        %p
          %small
            Created by <a href="https://github.com/allynfolksjr">Nikky Southerland</a>.
            Trek With Friends is not endorsed, sponsored, or affiliated with CBS Studios Inc. or the "Star Trek" franchise.

    = javascript_include_tag "application"
